<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_bar_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bar_chart"
        app:layout_constraintBottom_toTopOf="@id/btn_pie_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_pie_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pie_chart"
        app:layout_constraintBottom_toTopOf="@id/btn_radar_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_bar_chart" />

    <Button
        android:id="@+id/btn_radar_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radar_chart"
        app:layout_constraintBottom_toTopOf="@id/btn_line_chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pie_chart" />

    <Button
        android:id="@+id/btn_line_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/line_chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_radar_chart" />

</androidx.constraintlayout.widget.ConstraintLayout>